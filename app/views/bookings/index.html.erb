<p id="notice"><%= notice %></p>
<!-- The header for the bookings -->
<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <!--The column headers for the table  -->
      <th>Description</th>
      <th>Date in</th>
      <th>Date out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <!--ruby loop that prints each booking into a table  -->
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.description %></td>
        <td><%= booking.date_in %></td>
        <td><%= booking.date_out %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!-- imported bootstrap class to make the link into a button -->
<%= link_to 'New Booking', new_booking_path, :class => "btn btn-info", :role => "button" %>
