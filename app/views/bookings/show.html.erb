<!-- This code displays a notification of when a successful booking is made -->
<div class="successfulBooking">

<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <!-- Prints out the description value of the booking -->
  <%= @booking.description %>
</p>

<p>
  <strong>Date in:</strong>
  <!-- Prints out the date in value of the booking -->
  <%= @booking.date_in %>
</p>

<p>
  <strong>Date out:</strong>
  <!-- Prints out the date out value of the booking -->
  <%= @booking.date_out %>
</p>


<%= link_to 'Edit', edit_booking_path(@booking) %> |
<%= link_to 'Back', bookings_path %>


</div>
