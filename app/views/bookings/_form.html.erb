    <%= form.datetime_select :date_in, id: :booking_date_in %>
  </div>

  <div class="field">
    <%= form.label :date_out %>
    <%= form.datetime_select :date_out, id: :booking_date_out %>
  </div>

  <div class="field">
    <%= form.label :room %>
    <%= collection_select(:booking, :room_id, @rooms, :id, :name) %>
  </div>



  <div class="actions">
    <%= form.submit %>
  </div>
