<p id="notice"><%= notice %></p>

  <strong>Name:</strong>
  <%= @room.name %>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date in</th>
      <th>Date out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room.bookings.each do |booking|  %>
      <tr>
        <td><%= booking.description  %></td>
        <td><%= booking.date_in  %></td>
        <td><%= booking.date_out  %></td>
      </tr>
  </tbody>
</table>

<br>

<% end %>

<%= link_to 'New Booking', new_booking_path %>
<%= link_to 'Back to rooms', rooms_path %>
