<p id="notice"><%= notice %></p>

<h1 id="roomsIndexHeader">Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <% @rooms.each do |room| %>
          <th class="Room name"><%= link_to room.name, room %></th>
      <% end %>
    </tr>
      <% i = 9.00 %>
      <% 17.times do |row| %>
        <tr>
          <% if i % 1 ==0 %>
            <td class="timeCell"><%= number_with_precision i, :precision => 2 %></td>
            <% @rooms.each do |room| %>
              <td class="roomCell" id="<%= room.name %>" data-num="<%= i %>">-</td>
            <% end %>
            <% i += 0.30 %>
          <% else %>
          <td class="timeCell"> <%=  number_with_precision i, :precision => 2  %></td>
          <% @rooms.each do |room| %>
            <td class="roomCell" id="<%= room.name %>" data-num="<%= i %>">-</td>
          <% end %>
            <% i += 0.70 %>
        <% end %>
        </tr>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>

<br>

