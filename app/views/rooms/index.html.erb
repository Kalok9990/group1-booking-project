<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <% @rooms.each do |room| %>
          <th class="Room name"><%= room.name %></th>
          <td><%= link_to 'Show', room %></td>
      <% end %>
    </tr>
      <% i = 9.00 %>
      <% id = 1 %>
      <% 17.times do |row| %>
        <tr class="hour <% id.to_s %>">
          <% if i % 1 ==0 %>
            <td class="timeCell"><%= i %></td>
            <% i += 0.30 %>
            <% id +=0.5 %>
            <% @rooms.each do |room| %>
              <td id="<%= room.name %>">-</td>
            <% end %>
          <% else %>
          <td class="timeCell"> <%= i %></td>
          <% i += 0.70 %>
          <% @rooms.each do |room| %>
            <td id="<%= room.name %>">-</td>
          <% end %>
        <% end %>
        </tr>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>




  </tbody>
</table>

