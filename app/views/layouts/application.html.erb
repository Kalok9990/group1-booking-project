<!DOCTYPE html>
<html>
  <head>
    <title>Group1BookingRoject</title>
    <%= csrf_meta_tags %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/cssfile.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
      <a class="navbar1 btn btn-info" role="button"href="/week">Current Week</a>
      <a class="navbar1 btn btn-info" role="button"href="/day">Current Day</a>
      <a class="navbar1 btn btn-info" role="button"href="/rooms">All Rooms</a>
      <a class="navbar1 btn btn-info" role="button"href="/rooms/new">Create New Room</a>
    </nav>
    <%= yield %>
    <div id="footerSlideContainer">
    	<div class="fa fa-arrow-up fa-3x" id="footerSlideButton"></div>
    	<div id="footerSlideContent">
    		<div id="footerSlideText">
          <%= render '/bookings/form', booking: @booking %>
    		</div>
    	</div>
    </div>
  </body>
</html>
